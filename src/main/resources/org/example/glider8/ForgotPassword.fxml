<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="600.0" fx:controller="org.example.glider8.ForgotPasswordController" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, #f7c08a, #f7a76c);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <HBox alignment="TOP_LEFT" prefWidth="800.0" style="-fx-padding: 10;">
        <Button text="Back to Login" fx:id="backToLoginButton" prefHeight="15.0" prefWidth="130.0" style="-fx-font-size: 15; -fx-background-color: #ffffff; -fx-text-fill: #d9534f; -fx-background-radius: 10;"/>
    </HBox>

    <VBox alignment="CENTER" spacing="15">
        <Label text="Forgot Password" style="-fx-font-size: 24; -fx-text-fill: white; -fx-font-weight: bold;" />

        <!-- Username Field -->
        <TextField fx:id="usernameField" maxWidth="-Infinity" promptText="Enter Username" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: lightgrey; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 5;" />

        <!-- Security Question Label -->
        <Label fx:id="securityQuestionLabel" text="Security Question: What's your pet name?" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: lightgrey; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 5; -fx-font-size: 14;" />

        <!-- Security Answer Field -->
        <TextField fx:id="securityAnswerField" maxWidth="-Infinity" promptText="Enter Security Answer" prefWidth="300.0" style="-fx-background-color: white; -fx-border-color: lightgrey; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 5;" />

        <!-- Submit Button -->
        <Button text="Retrieve Password" fx:id="handleRetrievePassword" prefHeight="15.0" prefWidth="150.0" style="-fx-font-size: 15; -fx-background-color: #ffffff; -fx-text-fill: #2193b0; -fx-background-radius: 10;" onAction="#handleRetrievePasswordClick" />

        <!-- Password Display -->
        <Label fx:id="passwordLabel" text="Your Password Will Appear Here" prefWidth="300.0" wrapText="true" style="-fx-background-color: white; -fx-border-color: lightgrey; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 5; -fx-font-size: 14;" />
    </VBox>
</StackPane>
