<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="mainMenuPane" fx:controller="org.example.glider8.HelloController" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, #f7c08a, #f7a76c);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" spacing="20">
        <Label style="-fx-font-size: 36; -fx-text-fill: white; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, black, 5, 0.5, 1, 1);" text="Book Your Next Trip" />
        <Label style="-fx-font-size: 36; -fx-text-fill: white; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, black, 5, 0.5, 1, 1);" text="with Glider" />
        <HBox alignment="CENTER" spacing="20">
            <!-- Admin Login -->
            <VBox alignment="CENTER" spacing="10">
                <Label style="-fx-font-size: 22; -fx-text-fill: white; -fx-font-weight: bold;" text="Admin Login" />
                <TextField fx:id="adminUsernameField" promptText="Username" prefWidth="200" style="-fx-background-radius: 10; -fx-padding: 5;" />
                <PasswordField fx:id="adminPasswordField" promptText="Password" prefWidth="200" style="-fx-background-radius: 10; -fx-padding: 5;" />
                <Label fx:id="adminLoginStatusLabel" text="" style="-fx-font-size: 14; -fx-text-fill: white; -fx-font-style: italic;" />
                <Button fx:id="adminLoginButton" text="Login" prefHeight="39.0" prefWidth="200.0" style="-fx-font-size: 18; -fx-background-color: #ffffff; -fx-text-fill: #2193b0; -fx-background-radius: 10;" />
                <Button fx:id="adminForgotPasswordButton" text="Forgot Password?" style="-fx-font-size: 14; -fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-underline: true;" onAction="#adminForgotPasswordButtonClick" />
            </VBox>

            <!-- Separator Line -->
            <Separator orientation="VERTICAL" prefHeight="150" />

            <!-- Customer Login -->
            <VBox alignment="CENTER" spacing="10">
                <Label style="-fx-font-size: 22; -fx-text-fill: white; -fx-font-weight: bold;" text="Customer Login" />
                <TextField fx:id="customerUsernameField" promptText="Username" prefWidth="200" style="-fx-background-radius: 10; -fx-padding: 5;" />
                <PasswordField fx:id="customerPasswordField" promptText="Password" prefWidth="200" style="-fx-background-radius: 10; -fx-padding: 5;" />
                <Label fx:id="customerLoginStatusLabel" text="" style="-fx-font-size: 14; -fx-text-fill: white; -fx-font-style: italic;" />
                <Button fx:id="customerLoginButton" text="Login" prefHeight="39.0" prefWidth="200.0" style="-fx-font-size: 18; -fx-background-color: #ffffff; -fx-text-fill: #2193b0; -fx-background-radius: 10;" />
                <Button fx:id="customerForgotPasswordButton" text="Forgot Password?" style="-fx-font-size: 14; -fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-underline: true;" onAction="#customerForgotPasswordButtonClick" />
            </VBox>
        </HBox>

        <VBox alignment="CENTER" spacing="10">
            <Button fx:id="signUpButton" text="Don't have an account? Sign Up" style="-fx-font-size: 14; -fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-underline: true;" />
        </VBox>
    </VBox>
</StackPane>
