<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="splashPane" prefHeight="600.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12">
    <!-- Background Image -->
    <ImageView fx:id="backgroundImage" preserveRatio="true" fitWidth="800.0" fitHeight="600.0" pickOnBounds="true">
        <image>
            <Image url="https://www.pixelstalk.net/wp-content/uploads/2016/05/Airplane-HD-Wallpaper.jpg" />
        </image>
    </ImageView>

    <!-- Semi-transparent Overlay -->
    <StackPane style="-fx-background-color: rgba(0, 0, 0, 0.4);" />

    <!-- Content -->
    <VBox alignment="CENTER" spacing="20">
        <Label style="-fx-font-size: 28; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-family: 'Times New Roman'; -fx-effect: dropshadow(gaussian, black, 5, 0.5, 1, 1);" text="Welcome to" />
        <Label style="-fx-font-size: 40; -fx-text-fill: #ffd700; -fx-font-weight: bold; -fx-font-family: 'Georgia'; -fx-effect: dropshadow(gaussian, black, 5, 0.5, 1, 1);" text="Glider" />
        <Label style="-fx-font-size: 18; -fx-text-fill: lightgrey; -fx-font-family: 'Courier New'; -fx-font-style: italic;" text="Come fly with us" />
    </VBox>
</StackPane>
