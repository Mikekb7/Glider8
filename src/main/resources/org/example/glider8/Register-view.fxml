<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.glider8.RegisterController">
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #f7c08a, #f7a76c);">

        <HBox alignment="TOP_LEFT" spacing="10" prefWidth="800.0" style="-fx-padding: 10;">
            <Button text="Back to Login" fx:id="backToLoginButton"
                    prefHeight="30.0" prefWidth="130.0"
                    style="-fx-font-size: 15; -fx-background-color: #ffffff; -fx-text-fill: #d9534f; -fx-background-radius: 10;" onAction="#backToLoginButtonClick"/>
        </HBox>
        <Label style="-fx-font-size: 32; -fx-text-fill: white; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, black, 5, 0.5, 1, 1);" text="Sign up to GLIDE with us!" />

        <HBox alignment="CENTER" spacing="20">
            <VBox alignment="CENTER" spacing="10">
                <Label style="-fx-font-size: 18; -fx-text-fill: white; -fx-font-weight: bold;" text="Your Details" />
                <TextField fx:id="usernameField" prefWidth="200.0" promptText="Username" style="-fx-background-radius: 10; -fx-padding: 5;" />
                <PasswordField fx:id="passwordField" prefWidth="200.0" promptText="Password" style="-fx-background-radius: 10; -fx-padding: 5;" />
                <TextField fx:id="firstNameField" prefWidth="200.0" promptText="First Name" style="-fx-background-radius: 10; -fx-padding: 5;" />
                <TextField fx:id="lastNameField" prefWidth="200.0" promptText="Last Name" style="-fx-background-radius: 10; -fx-padding: 5;" />
                <TextField fx:id="emailField" prefWidth="200.0" promptText="Email" style="-fx-background-radius: 10; -fx-padding: 5;" />
            </VBox>

            <Separator orientation="VERTICAL" prefHeight="300.0" />

            <VBox alignment="CENTER" spacing="10">
                <Label style="-fx-font-size: 18; -fx-text-fill: white; -fx-font-weight: bold;" text="Address and Security" />
                <TextField fx:id="addressField" prefWidth="270.0" promptText="Address" style="-fx-background-radius: 10; -fx-padding: 5;" />
                <TextField fx:id="cityField" prefWidth="270.0" promptText="City" style="-fx-background-radius: 10; -fx-padding: 5;" />
                <TextField fx:id="stateField" prefWidth="270.0" promptText="State" style="-fx-background-radius: 10; -fx-padding: 5;" />
                <TextField fx:id="zipCodeField" prefWidth="270.0" promptText="Zip Code" style="-fx-background-radius: 10; -fx-padding: 5;" />
                <Label fx:id="securityQuestionLabel" text="Security Question: What's your pet name?" prefWidth="300.0" style="-fx-background-radius: 10; -fx-padding: 5; -fx-font-size: 14;  -fx-background-color: white; -fx-border-color: lightgrey; -fx-border-radius: 10;" />
                <TextField fx:id="securityAnswerField" prefWidth="270.0" promptText="Security Answer" style="-fx-background-radius: 10; -fx-padding: 5;"/>
                <TextField fx:id="ssnField" prefWidth="270.0" promptText="SSN" style="-fx-background-radius: 10; -fx-padding: 5;" />
            </VBox>
        </HBox>

        <Button fx:id="signUpButton" style="-fx-font-size: 18; -fx-background-color: white; -fx-text-fill: #2193b0; -fx-background-radius: 10;" text="Sign Up" prefHeight="25.0" prefWidth="100.0" onAction="#handleSignUpAction"/>
    </VBox>
</StackPane>